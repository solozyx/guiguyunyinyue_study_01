.indexContainer {
  height: 100%;
}

.navSwiper {
  width: 100%;
  height: 300rpx;
}

.navSwiper image {
  width: 100%;
  height: 100%;
}


/* 导航区域 */
.navContainer {
  display: flex;

}

.navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}


/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}


/* 推荐歌曲内容区 */
.scrollContainer {
  display: flex; /* 需要给scroll-view标签设置enable-flex*/
  margin-top: 30rpx;
  height:300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出隐藏，省略号代替*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; /*2*/
  -webkit-box-orient: vertical;
}



/* 排行榜 */
.topList{
  padding: 0 20rpx;
}


.topListSwiper {
  height: 450rpx;
}
.topListSwiper .swiperItem .title {
  font-size: 26rpx;
  line-height: 70rpx;
}


.swiperContent{
  background: #fbfbfb;
  width: 96%;
}

/* 当一个盒子成为伸缩盒模型之后，其内部的子元素会自动自动成为块级元素，其后代元素不受影响 */
.musicContent {
  display: flex;
  margin-bottom: 10rpx;
}

.musicContent .musicImg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}

.musicContent text {
  height: 100rpx;
  line-height: 100rpx;
}


.musicContent .count {
  width: 100rpx;
  text-align: center;
}









