.indexContainer {
  height: 100%;
}

.navSwiper {
  width: 100%;
  height: 300rpx;
}

.navSwiper image {
  width: 100%;
  height: 100%;
}


/* 导航区域 */
.navContainer {
  display: flex;

}

.navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}


/* 推荐歌曲 */
.recommendContainer {
  padding: 40rpx 20rpx;
}
.recommendContainer .header .title {
  font-size: 28rpx;
  color: #333;
}

.recommendContainer .header .more {
  float: right;
  border: 1rpx solid #999;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
}
/* 推荐歌曲内容区 */
.scrollContainer {
  display: flex; /* 需要给scroll-view标签设置enable-flex*/
  margin-top: 30rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text {
  display: block;
  font-size: 26rpx;
  /* 单行文本溢出隐藏，省略号代替*/
  /*white-space: nowrap;*/
  /*overflow: hidden;*/
  /*text-overflow: ellipsis;*/

  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; /*2*/
  -webkit-box-orient: vertical;
}
