.indexContainer {
  height: 100%;
}

.navSwiper {
  width: 100%;
  height: 300rpx;
}

.navSwiper image {
  width: 100%;
  height: 100%;
}


/* 导航区域 */
.navContainer {
  display: flex;

}

.navItem {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  text-align: center;
  line-height: 100rpx;
  color:#fff;
  margin: 20rpx 0;
}

.navItem text {
  font-size: 26rpx;
}
