.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommendSongContainer .header image {
  width: 100%;
  height: 300rpx;
}


.date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top: -50rpx;
  margin-left: -100rpx;
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #fff;
}
.date .day {
  font-size: 40rpx;
}
