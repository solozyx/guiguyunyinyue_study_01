.header {
  display: flex;
  padding: 10rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}


.header input {
  border: 1rpx solid #eee;
  height:60rpx;
  flex:1; /*单独给某一个flex-item设置flex属性的时候可以提高当前flex-item的权重*/
  margin: 0 30rpx;
}

.header input .placeholder{
  color: #d43c33;
  font-size: 26rpx;
  text-align: center;
}

/* 导航区域  */
.navScroll {
  display: flex;
  white-space: nowrap; /*当flex-item没有指定宽度的时候应该设置不换行*/
  margin: 20rpx 0;
}

.navItem {
  padding: 0 30rpx;
}

.navItemContent {
  height: 60rpx;
}

.navItemContent.active {
  border-bottom: 1rpx solid #d43c33;
}

