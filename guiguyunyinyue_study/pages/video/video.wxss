.header {
  display: flex;
  padding: 10rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}


.header input {
  border: 1rpx solid #eee;
  height:60rpx;
  flex:1; /*单独给某一个flex-item设置flex属性的时候可以提高当前flex-item的权重*/
  margin: 0 30rpx;
}

.header input .placeholder{
  color: #d43c33;
  font-size: 26rpx;
  text-align: center;
}

/* 导航区域  */
.navScroll {
  display: flex;
  white-space: nowrap; /*当flex-item没有指定宽度的时候应该设置不换行*/
  margin: 20rpx 0;
  height: 60rpx;
}

.navItem {
  padding: 0 30rpx;
}

.navItemContent {
  height: 60rpx;
  box-sizing: border-box;
}

.navItemContent.active {
  border-bottom: 1rpx solid #d43c33;
}

/* 视频列表 */

.videoList {
  /*
    1. calc()用于动态计算宽高
    2. 视口单位： vh vw    v:viewport  w:width h: height
    3. 1vh = 1%视口高度  1vw=1%视口宽度
  */
  height: calc(100vh - 182rpx);
}

.videoItem {
  padding: 0 3%;
}
.videoItem video {
  width: 100%;
  height: 360rpx;
}



.videoList .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
